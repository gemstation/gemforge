{
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
    "outDir": "build",
    "target": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,		
		"allowJs": true,
		"skipLibCheck": true,
		"declaration": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"incremental": true,
	},
	"include": ["src/**/*"],
	"exclude": ["build", "node_modules"]
}
